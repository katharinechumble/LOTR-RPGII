{{!-- login form --}}
<div class='align-center'>
    <img src='/assets/graphics/introtext.png' alt='intro text'>
</div>

<div class='card rounded login-card'>
    <h2>LOGIN</h2>
    <form class="login-form">
        <div class="grid-container">
            <div class="grid-x grid-padding-x">
                <div class="small-4 cell">
                    <label for="user-login">Username:</label>
                    <input class="input-field" type="text" id="user-login" />
                </div>
                <div class="small-4 cell">
                    <label for="password-login">Password:</label>
                    <input class="input-field" type="password" id="password-login" />
                </div>
                <div>
                    <button type="submit" class="btn">LOGIN</button>
                </div>
            </div>
        </div>
    </form>
</div>
{{!-- Sign Up Form. --}}

<div class='card rounded signup-card'>
    <h2>SIGN UP</h2>
    <form class="signup-form align-center">
        <div class="grid-container">
            <div class="grid-x grid-padding-x">
                <div class="small-4 cell">
                    <label for="username-signup">Create Username:</label>
                    <input class="input-field" type="text" id="username-signup" />
                </div>
                <div class="small-4 cell">
                    <label for="password-signup">Create Password:</label>
                    <input class="input-field" type="password" id="password-signup" />
                </div>
                <div>
                    <button type="submit" class="btn">SIGN UP</button>
                </div>
            </div>
        </div>
    </form>
</div>

